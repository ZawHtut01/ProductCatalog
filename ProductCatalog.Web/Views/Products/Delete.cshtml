@using ProductCatalog.Application.DTOs
@model ProductDto

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Product
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-octagon"></i> Warning!
                        </h5>
                        <p class="mb-0">
                            Are you sure you want to delete this product? This action cannot be undone.
                        </p>
                    </div>
                    
                    <div class="product-details p-4 border rounded mb-4">
                        <h5 class="text-danger mb-3">Product Details</h5>
                        
                        <dl class="row">
                            <dt class="col-sm-4">ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>
                            
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8 fw-bold">@Model.Name</dd>
                            
                            <dt class="col-sm-4">Category:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary">@Model.Category</span>
                            </dd>
                            
                            <dt class="col-sm-4">Price:</dt>
                            <dd class="col-sm-8 fw-bold text-success">
                                @Model.Price.ToString("C")
                            </dd>
                            
                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                            
                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">
                                <i class="bi bi-calendar"></i> @Model.CreatedAt.ToString("MMM dd, yyyy")
                            </dd>
                        </dl>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger px-4" id="deleteBtn">
                                <i class="bi bi-trash"></i> Delete Permanently
                            </button>
                            
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
                
                <div class="card-footer text-muted bg-light">
                    <small>
                        <i class="bi bi-info-circle"></i> Note: Products are soft-deleted and can be restored from the database.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enhanced delete confirmation
            $('form').submit(function(e) {
                e.preventDefault();
                
                Swal.fire({
                    title: 'Are you absolutely sure?',
                    html: `
                        <div class="text-start">
                            <p class="text-danger mb-2">You are about to delete:</p>
                            <div class="alert alert-light">
                                <strong>${$('dd.fw-bold:first').text()}</strong><br>
                                <small>ID: ${$('dd:first').text()}</small>
                            </div>
                            <p class="mt-3"><i class="bi bi-exclamation-triangle text-warning"></i> This action cannot be undone.</p>
                        </div>
                    `,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, keep it',
                    showLoaderOnConfirm: true,
                    preConfirm: () => {
                        return new Promise((resolve) => {
                            // Show loading state
                            $('#deleteBtn').html('<i class="bi bi-hourglass-split"></i> Deleting...');
                            $('#deleteBtn').prop('disabled', true);
                            
                            // Submit the form after confirmation
                            setTimeout(() => {
                                $('form')[0].submit();
                                resolve();
                            }, 1000);
                        });
                    }
                }).then((result) => {
                    if (result.isDismissed) {
                        // User cancelled - restore button state
                        $('#deleteBtn').html('<i class="bi bi-trash"></i> Delete Permanently');
                        $('#deleteBtn').prop('disabled', false);
                    }
                });
            });
            
            // Keyboard shortcuts
            $(document).keydown(function(e) {
                if (e.key === 'Escape') {
                    window.location.href = '@Url.Action("Index")';
                }
            });
        });
    </script>
    
    <style>
        .product-details dt {
            font-weight: 600;
            color: #555;
        }
        .product-details dd {
            margin-bottom: 0.5rem;
        }
        .card {
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .card-header {
            border-bottom: none;
        }
    </style>
}